@page
@model WebApp.Pages.Institucion.EditModel
@{
}

<main>
    <section class="py-2 container">
        <div class="row py-lg-2 text-center">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">@Model.TitlePage</h1>
                <p class="lead text-muted">Complete la información del formulario</p>
                <p>

                </p>
            </div>
        </div>
        <div class="offset-4 col-4">

            <form method="post">
                <div class="row g-3 mb-4">

                    <div class="col-12">
                        <label for="Codigo" class="form-label">Código</label>
                        <input type="text" class="form-control" id="Codigo" placeholder="Código" asp-for="InstitucionEntity.Codigo" value="@Model.InstitucionEntity.Codigo" required>
                    </div>

                    <div class="col-12">
                        <label for="Nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="Nombre" placeholder="Nombre" asp-for="InstitucionEntity.Nombre" value="@Model.InstitucionEntity.Nombre" required>
                    </div>

                    <div class="col-12">
                        <label for="Telefono" class="form-label">Télefono</label>
                        <input type="text" class="form-control" id="Telefono" placeholder="Télefono" asp-for="InstitucionEntity.Telefono" value="@Model.InstitucionEntity.Telefono" required>
                    </div>

                    @if (@Model.IsEdit)
                    {
                        <div class="col-12" >
                            <label for="Estado" class="form-label">Estado</label>
                            <select class="form-select" id="Estado" asp-for="InstitucionEntity.Estado">
                                <option value="true" selected>Activar</option>
                                <option value="false">Inactivar</option>
                            </select>
                        </div>
                    }

                </div>

                <button type="submit" class="w-100 btn btn-primary mb-2">Guardar</button>

                <a class="w-100 btn btn-secondary mb-2" asp-page="/Institucion/Grid">Regresar</a>
            </form>
        </div>
    </section>
</main>

@section Scripts
{
    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>
    <script defer src="~/App/Institucion/Edit.js"></script>
}